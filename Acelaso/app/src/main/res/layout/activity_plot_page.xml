<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ncsu.bme.acelaso.PlotPage"
    android:background="@drawable/black">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal"
        android:textSize="38dp"
        android:text="PLOT PAGE"
        android:textColor="#FF33B5E5"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pulse Rate"
        android:id="@+id/HRButton"
        android:onClick="onClick"
        android:layout_above="@+id/TempButton"
        android:layout_alignStart="@+id/TempButton"
        android:layout_alignEnd="@+id/TempButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:id="@+id/TempButton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/SCButton"
        android:layout_alignEnd="@+id/SCButton"
        android:onClick="onClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skin Conductance"
        android:id="@+id/SCButton"
        android:onClick="onClick"
        android:layout_below="@+id/TempButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
